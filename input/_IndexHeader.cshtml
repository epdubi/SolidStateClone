<section id="banner">
  <div class="inner">
    @if(Context.String("Whatever") != null)
    {
        <h2>@Context.String("Whatever")</h2>
    }
    @if(Context.String("Prefix") != null && Context.String(BlogKeys.Description) != null)
    {
        <h2><span>@Context.String("Prefix")</span> @Context.String(BlogKeys.Description)</h2>
    }
    @if(Context.String(BlogKeys.Intro) != null)
    {            
        <p>@Context.String(BlogKeys.Intro)</p>
    }
  </div>
</section>